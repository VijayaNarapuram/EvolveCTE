                                        @*@Html.PasswordFor(model => model.PWD, new { @class = "gui-input", placeholder = "Enter password", autocomplete = "off" })*@
                                        @Html.ValidationMessageFor(model => model.PWD)
                                        <label for="password" class="field-icon"><i class="fa fa-lock"></i></label>
                                    </label>
                                </div>
                                
